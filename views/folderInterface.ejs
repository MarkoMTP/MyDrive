<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= folder ? folder.name : "Folder" %></title>
    <style>
      body {
        font-family: "Inter", Arial, sans-serif;
        background: #f8f9fb;
        margin: 0;
        padding: 0;
        color: #222;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 100vh;
      }

      a {
        color: #0073e6;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .folder-container {
        background: #fff;
        width: 90%;
        max-width: 700px;
        margin: 40px auto;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        padding: 30px;
        box-sizing: border-box;
      }

      .folder-header {
        border-bottom: 1px solid #eee;
        margin-bottom: 25px;
        padding-bottom: 10px;
      }

      .folder-title {
        font-size: 1.8rem;
        font-weight: 600;
        margin: 0;
        color: #333;
      }

      .upload-form {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-bottom: 30px;
      }

      .file-label {
        font-weight: 500;
        color: #444;
      }

      .file-input {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 1rem;
        cursor: pointer;
        transition: border-color 0.2s ease;
      }

      .file-input:hover {
        border-color: #0073e6;
      }

      .upload-button {
        align-self: flex-start;
        background-color: #0073e6;
        color: #fff;
        padding: 10px 18px;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.3s ease, transform 0.2s ease;
      }

      .upload-button:hover {
        background-color: #005bb5;
        transform: translateY(-2px);
      }

      .files-section {
        border-top: 1px solid #eee;
        padding-top: 20px;
      }

      .files-heading {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 15px;
        color: #333;
      }

      .files-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .file-item {
        background: #f4f6f8;
        margin-bottom: 10px;
        padding: 12px 15px;
        border-radius: 8px;
        transition: background 0.2s ease;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
      }

      .file-item:hover {
        background: #e9f1ff;
      }

      .file-link {
        color: #0073e6;
        font-weight: 500;
        word-break: break-all;
      }

      .no-files {
        color: #666;
        font-style: italic;
      }

      .copy-btn {
        background: #f0f2f5;
        color: #333;
        border: none;
        border-radius: 6px;
        padding: 6px 12px;
        font-size: 0.9rem;
        transition: background 0.2s ease;
        cursor: pointer;
      }

      .copy-btn:hover {
        background: #e0e3e8;
      }

      .folder-footer {
        margin-top: 30px;
        text-align: left;
      }

      .back-button {
        display: inline-block;
        background: #f0f2f5;
        padding: 8px 14px;
        border-radius: 6px;
        color: #333;
        font-weight: 500;
        transition: background 0.2s ease;
      }

      .back-button:hover {
        background: #e0e3e8;
      }

      .error-container {
        text-align: center;
        margin-top: 80px;
      }

      .error-message {
        font-size: 1.6rem;
        color: #d9534f;
      }

      .error-container .back-button {
        margin-top: 15px;
      }
    </style>
  </head>

  <body class="body-container">
    <% if (folder && userId && files) { %>
    <section class="folder-container">
      <header class="folder-header">
        <h1 class="folder-title"><%= folder.name %></h1>
      </header>

      <form
        action="/userPage/<%= userId %>/<%= folder.name %>/upload"
        method="POST"
        enctype="multipart/form-data"
        class="upload-form"
      >
        <label for="file" class="file-label">Choose a file:</label>
        <input type="file" name="file" id="file" class="file-input" required />
        <button type="submit" class="upload-button">Upload</button>
      </form>

      <section class="files-section">
        <h2 class="files-heading">Files in this folder:</h2>
        <% if (files.length > 0) { %>
        <ul class="files-list">
          <% files.forEach(file => { %>
          <li class="file-item">
            <!-- ✅ RESTORED internal route link -->
            <a
              href="/userPage/<%= userId %>/<%= folder.name %>/<%= file.id %>"
              class="file-link"
            >
              <%= file.filename %>
            </a>
            <!-- ✅ Keeps the public copy link working -->
            <button
              class="copy-btn"
              onclick="copyToClipboard('<%= file.url %>')"
            >
              Copy Link
            </button>
          </li>
          <% }) %>
        </ul>
        <% } else { %>
        <p class="no-files">No files uploaded yet.</p>
        <% } %>
      </section>

      <footer class="folder-footer">
        <a href="/userPage" class="back-button">← Back to Folders</a>
      </footer>
    </section>
    <% } else { %>
    <section class="error-container">
      <h1 class="error-message">Folder not found</h1>
      <a href="/userPage" class="back-button">← Back to Folders</a>
    </section>
    <% } %>

    <script>
      function copyToClipboard(text) {
        if (navigator.clipboard && window.isSecureContext) {
          navigator.clipboard
            .writeText(text)
            .then(() => alert("✅ Link copied to clipboard!"))
            .catch((err) => {
              console.error("Clipboard failed:", err);
              fallbackCopy(text);
            });
        } else {
          fallbackCopy(text);
        }
      }

      function fallbackCopy(text) {
        const textArea = document.createElement("textarea");
        textArea.value = text;
        textArea.style.position = "fixed";
        document.body.appendChild(textArea);
        textArea.focus();
        textArea.select();
        try {
          document.execCommand("copy");
          alert("✅ Link copied to clipboard!");
        } catch (err) {
          console.error("Fallback copy failed:", err);
        }
        document.body.removeChild(textArea);
      }
    </script>
  </body>
</html>
