<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Folder View</title>
    <style>
      /* General container styles */
      .container {
        display: flex;
        width: 100%;
        height: 100vh;
      }

      /* Sidebar (Left) */
      .sidebar {
        width: 250px;
        background-color: #f4f4f4;
        padding: 20px;
        box-shadow: 2px 0px 5px rgba(0, 0, 0, 0.1);
        height: 100%;
        overflow-y: auto;
      }

      .sidebar h2 {
        margin-bottom: 20px;
      }

      /* Folder list items */
      .folder-list {
        display: flex;
        flex-direction: column;
      }

      .folder-item {
        padding: 10px;
        margin-bottom: 10px;
        cursor: pointer;
        border-radius: 4px;
        background-color: #e0e0e0;
        transition: background-color 0.3s;
      }

      .folder-item:hover {
        background-color: #ccc;
      }

      .folder-item h3 {
        margin: 0;
      }

      /* Folder content (Middle) */
      .folder-view {
        flex-grow: 1;
        padding: 20px;
        background-color: #fff;
        height: 100%;
        overflow-y: auto;
      }

      .folder-view h2 {
        margin-top: 0;
      }

      /* Folder content items */
      .folder-content {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }

      .file-item {
        padding: 8px 12px;
        background-color: #f0f0f0;
        border-radius: 4px;
        box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        transition: background-color 0.3s;
      }

      .file-item:hover {
        background-color: #ddd;
      }

      /* Create folder form */
      .create-folder {
        margin-top: 20px;
      }

      .create-folder input {
        padding: 8px;
        margin: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
      }

      .create-folder button {
        padding: 8px 12px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      .create-folder button:hover {
        background-color: #0056b3;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- Left Sidebar for Folders -->
      <div class="sidebar">
        <h2>Logged in as: <%= user.email %></h2>
        <h3>Folders</h3>
        <div class="folder-list">
          <% if (folders && folders.length > 0) { %>
            <% folders.forEach((folder) => { %>
              <div class="folder-item">
                <h3 onclick="openFolder('<%= folder.id %>')"><%= folder.name %></h3>
                <form
                  action="/deleteFolder"
                  method="post"
                  onsubmit="return confirm('Are you sure you want to delete this folder?')"
                >
                  <!-- Hidden input to send folder name -->
                  <input
                    type="hidden"
                    name="folderName"
                    value="<%= folder.name %>"
                  />
                  <input
                 type="hidden"
                 name="folderId"
              value="<%= folder.id %>"
                      />
                  <button type="submit">Delete</button>
                </form>
              </div>
            <% }); %>
          <% } else { %>
            <p>No folders found</p>
          <% } %>
        </div>
      </div>
      

        <!-- Create Folder Form -->
        <div class="create-folder">
          <form action="/createFolder" method="POST">
            <input
              type="text"
              name="folderName"
              placeholder="Enter folder name"
              required
            />
            <button type="submit">Create Folder</button>
          </form>
        </div>
      </div>

      <!-- Folder Content Area (Middle) -->
      <div class="folder-view">
        <h2>Select a folder to view its contents</h2>
        <div id="folderContent">
          <!-- Folder contents would be displayed here when a folder is clicked -->
        </div>

        <form action="/logout" method="POST">
          <button type="submit" class="logout-btn">Logout</button>
        </form>
      </div>
    </div>
  </body>
</html>
